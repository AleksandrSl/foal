{
  "compilerOptions": {
    "outDir": "lib/",
    "module": "commonjs",
    "target": "es2017",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [ "node", "mocha" ],
    "jsx": "react"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
