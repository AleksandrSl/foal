{
  "name": "/* kebabName */",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "build": "tsc && copy \"src/**/*.html\" lib",
    "build:w": "tsc -w",
    "start": "node ./lib/index.js",
    "start:w": "supervisor -w ./lib --no-restart-on error ./lib/index.js",
    "develop": "npm run build && concurrently \"npm run build:w\" \"npm run start:w\"",

    "build:test": "tsc && copy \"src/**/*.html\" lib",
    "build:test:w": "tsc -w",
    "start:test": "mocha \"./lib/**/*.spec.js\"",
    "start:test:w": "mocha -w \"./lib/**/*.spec.js\"",
    "test": "npm run build:test && concurrently \"npm run build:test:w\" \"npm run start:test:w\"",

    "lint": "tslint -c tslint.json -p tsconfig.json",
    "migration:generate": "ts-node ./node_modules/.bin/typeorm migration:generate",
    "migration:run": "ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:revert": "ts-node ./node_modules/.bin/typeorm migration:revert"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@foal/core": "^0.6.0-beta.0",
    "@foal/ejs": "^0.6.0-alpha.3",
    "source-map-support": "^0.5.1",
    "sqlite3": "^4.0.0",
    "connect-sqlite3": "^0.9.11",
    "typeorm": "^0.2.6"
  },
  "devDependencies": {
    "@types/node": "^8.0.47",
    "@foal/cli": "^0.6.0-beta.0",
    "mocha": "^5.2.0",
    "@types/mocha": "^5.2.1",
    "concurrently": "^3.5.1",
    "copy": "^0.3.2",
    "supervisor": "^0.12.0",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "ts-node": "^6.1.0"
  }
}